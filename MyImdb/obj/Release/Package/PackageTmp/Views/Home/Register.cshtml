@using System.Web.Optimization @{
    ViewBag.Title = "User Register"; }
@section libs { @Scripts.Render("~/bundles/accountRegister") }
<div ng-controller="accountRegisterController">
    <br />
    <h1><span class="fas fa-user"></span>&nbsp;&nbsp;Register a new User</h1>
    <br />
    <br />
    <form name="accountRegisterForm" ng-submit="save(accountRegisterForm)" novalidate>
        <div class="row">
            <div class="col-md-offset-5 col-md-12">
                <div class="form-horizontal">
                    <div form-group="email">
                        <label for="accountEmail" >Email</label>

                            <input type="text" id="accountEmail" name="email" class="form-control" ng-model="register.email" required />
                            <p error="email" type="required">The email is required.</p>
                            <p srv-error="email"></p>

                    </div>
                    <div form-group="password">
                        <label for="accountPassword">Password</label>

                            <input type="password" id="accountPassword" name="password" class="form-control" ng-model="register.password" required ng-maxlength="100" />
                            <p error="password" type="required">The password is required.</p>
                            <p error="password" type="maxlength">The password must have a maximum of 100 characters.</p>
                            <p srv-error="password"></p>

                    </div>
                    <div form-group="password">
                        <label for="accountPassword">Confirm Password</label>
                        
                            <input type="password" id="accountPassword" name="password" class="form-control" ng-model="passwordConfirmation" required ng-maxlength="100" />
                            <p error="password" type="required">The password is required.</p>
                            <p error="password" type="maxlength">The password must have a maximum of 100 characters.</p>
                            <p srv-error="password"></p>
                   
                    </div>

                    <br />
                    <div class="form-group">
                        <div >
                            <button type="submit" class="btn btn-warning"><i class="fa fa-check"></i>&nbsp;Register</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
 
    <div class="top-space-xl">
        <a href="/Home"><i class="fa fa-chevron-left"></i>&nbsp;Back to Home</a>
    </div>
</div>

