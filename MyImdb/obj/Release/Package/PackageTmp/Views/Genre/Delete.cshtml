
@using System.Web.Optimization @{
    ViewBag.Title = "Delete genre"; }
@section libs { @Scripts.Render("~/bundles/genreDelete") }
<div ng-controller="genreDeleteController">
    <br />
    <h1><span class="fas fa-user"></span> Delete Genre</h1>
    <div ng-show="movies.length < 1">
        <p>There are no registered movies to this genre.</p>
    </div>
    <div ng-hide="movies.length < 1">
        <p>Deleting this genre will delete all movies associated with it.</p>
        <p>Registered movies with {{genre.name}} as their genre:</p>
        <ul class="top-space-lg">
            <li class="top-space-md" ng-repeat="movie in movies" ng-bind="movie"></li>
        </ul>
    </div>
    <div class="row text-center">
        <div class="col-md-offset-2 col-md-6">
            <button class="btn btn-danger" ng-click="delete()"><i class="fa fa-remove"></i>&nbsp;Delete</button> <a class="btn btn-default" href="/Genre/Edit/{{genre.id}}">Cancel</a>
        </div>
    </div>
    <div class="top-space-xl">
        <a href="/Genre"><i class="fa fa-chevron-left"></i>&nbsp;Back to Genres</a>
    </div>
</div>

