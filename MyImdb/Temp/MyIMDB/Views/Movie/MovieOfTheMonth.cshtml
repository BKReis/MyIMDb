
@{
    //Layout = null;
    var movieOfTheMonth = new { Rank = 1, Title = "The Shawshank Redemption", Year = 1994 };
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MovieOfTheMonth</title>
</head>
<body>
    <h1><span class="fas fa-star"></span> Movie of the month</h1>
    <br />
    <br />
    <div class="Container">
        <div class="row">
            <div class="col-md-4"><img src="~/Images/Shawsshank.jpg" w /></div>
            <div class="col-md-6">
                <h2> @movieOfTheMonth.Title (@movieOfTheMonth.Year)</h2>
                <h3> Rank: @movieOfTheMonth.Rank</h3>
                <small> Two imprisoned men bond over a number of years, finding solace and eventual redemption through acts of common decency.</small>
                
            </div>
        </div>
        <b>Movie of the month: @movieOfTheMonth.Title </b>
    </div>
</body>
</html>
