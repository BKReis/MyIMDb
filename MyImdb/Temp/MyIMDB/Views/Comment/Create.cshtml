@using System.Web.Optimization @{
    ViewBag.Title = "Add Comment"; }
@section libs { @Scripts.Render("~/bundles/commentCreate") }
<div ng-controller="commentCreateController">
    <h1><span class="fas fa-comment"></span> Add comment</h1>
    <form name="commentCreateForm" ng-submit="save(commentCreateForm)" novalidate>
        <div class="row">
            <div class="col-md-6">
                <div class="form-horizontal">
                    <div form-group="comment">
                        <label for="commentValue" >Comment</label>
                        <div>                       
                            <textarea class="form-control" id="commentValue" rows="3" ng-model="comment.value" required ng-maxlength="200"></textarea>
                            <p error="comment" type="required">The comment is required.</p>
                            <p error="comment" type="maxlength">The comment must have a maximum of 200 characters.</p>
                            <p srv-error="comment"></p>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <div >
                            <button type="submit" class="btn btn-warning"><i class="fa fa-check"></i>&nbsp;Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="top-space-xl">
        <a href="/Movie/Details/{{comment.selectedMovieId}}"><i class="fa fa-chevron-left"></i>&nbsp;Back to Movie</a>
    </div>
</div>

