@using System.Web.Optimization @{
    ViewBag.Title = "Delete Comment"; }
@section libs { @Scripts.Render("~/bundles/commentDelete") }
<div ng-controller="commentDeleteController">
    <br />
    <h1><span class="fas fa-comment"></span> Delete comment</h1>

    <div class="alert alert-warning">
        <p><i class="fa fa-warning"></i>&nbsp;Are you sure you want to delete this comment?</p>
    </div>
    <div class="row text-center">
        <div class="col-md-offset-2 col-md-6">
            <button class="btn btn-danger" ng-click="delete()"><i class="fa fa-remove"></i>&nbsp;Delete</button>
            <a class="btn btn-default" href="/Movie/Details/{{comment.selectedMovieId}}">Cancel</a>
        </div>
    </div>
    <div class="top-space-xl">
        <a href="/Movie"><i class="fa fa-chevron-left"></i>&nbsp;Back to Movies</a>
    </div>
</div>

