@using System.Web.Optimization @{
    ViewBag.Title = "User Login"; }
@section libs { @Scripts.Render("~/bundles/accountLogin") }
<div ng-controller="accountLoginController">
    <br />
    <h1><span class="fas fa-user"></span>&nbsp;&nbsp;Login</h1>
    <br />
    <br />
    <form name="accountLoginForm" ng-submit="save(accountLoginForm)" novalidate>
        <div class="row">
            <div class="col-md-6">
                <div class="form-horizontal">
                    <div form-group="email">
                        <label for="accountEmail" >Email</label>
                      
                            <input type="text" id="accountEmail" name="email" class="form-control" ng-model="login.email" required />
                            <p error="email" type="required">The email is required.</p>
                            <p srv-error="email"></p>
              
                    </div>
                    <div form-group="password">
                        <label for="accountPassword" >Password</label>
                
                            <input type="password" id="accountPassword" name="password" class="form-control" ng-model="login.password" required ng-maxlength="100" />
                            <p error="password" type="required">The password is required.</p>
                            <p error="password" type="maxlength">The password must have a maximum of 100 characters.</p>
                            <p srv-error="password"></p>
                 
                    </div>
                    <div class="form-check">
                        <input type="checkbox" id="rememberMe" name="rememberMe" class="form-check-input" ng-model="login.rememberMe">
                        <label class="form-check-label" for="rememberMe">  Remember me?</label>

                    </div>
                    <br />
                    <div class="form-group">
                        <div class=" col-md-10">
                            <button type="submit" class="btn btn-warning"><i class="fa fa-check"></i>&nbsp;Login</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="row text-center">
        <br />
      Not registered yet? Click<a href="/Home/Register"> here</a>
    </div>
    <div class="top-space-xl">
        <a href="/Home"><i class="fa fa-chevron-left"></i>&nbsp;Back to Home</a>
    </div>
</div>

