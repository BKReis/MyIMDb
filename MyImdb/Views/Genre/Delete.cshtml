@model MyImdb.ViewModels.GenreDeleteViewModel
@{
    ViewBag.Title = "Delete"; }
@if (ViewBag.Error != null) {
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger">
                <p><i class="fa fa-warning"></i>&nbsp;@ViewBag.Error</p>
            </div>
        </div>
    </div>
}
<h2>Delete genre</h2>
@if (Model.Movies != null && Model.Movies.Count > 0) 
    {<p>The genre @Model.Genre.Name has the following registered movies:</p>
<ul>
    @foreach (var movie in Model.Movies) {
        <li>@movie</li>
    }
</ul>

}
else { <p>The genre @Model.Genre.Name has no registered movies.</p>
}
<div class="alert alert-warning">
    <p><i class="fa fa-warning"></i>&nbsp;Are you sure you want to delete this genre?</p>
</div>
<div>
    @using (Html.BeginForm()) {@Html.AntiForgeryToken() @Html.HiddenFor(model => model.Genre.Id) @Html.HiddenFor(model => model.Genre.Name)
    <div class="row text-center">
        <div class="col-md-offset-2 col-md-6">
            <button class="btn btn-danger" type="submit"><i class="fa fa-remove"></i>&nbsp;Delete</button> <a class="btn btn-default" href="/Genre/Edit/@Model.Genre.Id">Cancel</a>
        </div>
    </div>
}
</div>