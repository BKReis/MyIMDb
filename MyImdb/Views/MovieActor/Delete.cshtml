@model MyImdb.ViewModels.MovieActorDeleteViewModel
@{
    ViewBag.Title = "Delete"; }
@if (ViewBag.Error != null) {
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger">
                <p><i class="fa fa-warning"></i>&nbsp;@ViewBag.Error</p>
            </div>
        </div>
    </div>
}
<h2>Delete relationship between movie and actor</h2>

<div class="alert alert-warning">
    <p><i class="fa fa-warning"></i>&nbsp;Are you sure you want to delete this character?</p>
</div>
<div>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Relation.Id)
        @Html.HiddenFor(model => model.Relation.Name)
        @Html.HiddenFor(model => model.Relation.SelectedMovieId)
        <div class="row text-center">
            <div class="col-md-offset-2 col-md-6">
                <button class="btn btn-danger" type="submit"><i class="fa fa-remove"></i>&nbsp;Delete</button>
                <a class="btn btn-default" href="/Movie/Details/@Model.Relation.SelectedMovieId">Cancel</a>
            </div>
        </div>
    }
</div>