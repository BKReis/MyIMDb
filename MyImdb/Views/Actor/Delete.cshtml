

@using System.Web.Optimization @{
    ViewBag.Title = "Delete Actor"; }
@section libs { @Scripts.Render("~/bundles/actorDelete") }
<div ng-controller="actorDeleteController">
    <br />
    <h1><span class="fas fa-user"></span> Delete Actor</h1>
    <div ng-show="characters.length < 1">
        <p>There are no registered characters to this actor.</p>
    </div>
    <div ng-hide="characters.length < 1">
        <p>Deleting this actor will delete all characters associated with him.</p>
        <p>Registered characters performed by {{actor.name}}:</p>
        <ul class="top-space-lg">
            <li class="top-space-md" ng-repeat="character in characters" ng-bind="character"></li>
        </ul>
    </div>
    <div class="row text-center">
        <div class="col-md-offset-2 col-md-6">
            <button class="btn btn-danger" ng-click="delete()"><i class="fa fa-remove"></i>&nbsp;Delete</button> <a class="btn btn-default" href="/Actor/Edit/{{actor.id}}">Cancel</a>
        </div>
    </div>
    <div class="top-space-xl">
        <a href="/Actor"><i class="fa fa-chevron-left"></i>&nbsp;Back to Actors</a>
    </div>
</div>

