@using MyImdb.ViewModels
@model List<MovieListViewModel>
@{
    
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @if (Model.Count < 1) {
            <h1>There are no registered Movies yet.</h1>
            <br />
        } else {
            <br />
            if (ViewBag.Message != null) {
                <div class="alert alert-info">
                    <p><span class="glyphicon glyphicon-ok"></span>&nbsp;@ViewBag.Message</p>
                </div>
            }
            <h1><span class="fas fa-film"></span> Movies</h1>
            <br />
            <table class="table table-striped">
                <tr>
                    <th>Title</th>
                    <th>Rank</th>
                    <th>Year</th>
                    <th>Genre</th>
                </tr>
                @foreach (var movie in Model) {
                    <tr>
                        <td><a href="/Movie/Details/@movie.Id"> @movie.Title</a></td>
                        <td>@movie.Rank</td>
                        <td>@movie.Year</td>
                        <td>@movie.Genre</td>
                    </tr>
                }
            </table>
        }
    </div>


    @*@Html.ActionLink("Add a new movie", "Create", "Movie", new { area = "" }, new { @class = "btn btn-default" })*@
    
    <a href="@Url.Action("Create", "Movie")" class="btn btn-warning">
        <i class="fas fa-plus-square"></i>
        <span>
            <strong>Create</strong>
        </span>
    </a>

</body>
</html>
